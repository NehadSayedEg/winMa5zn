<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ScanActivity.ScanActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_margin="@dimen/_5ssp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/color1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <ImageView
                android:id="@+id/done_btn"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:background="@drawable/done_background"
                android:src="@drawable/ic_baseline_done_24"
                android:layout_margin="@dimen/_5ssp"
                android:tint="@color/color5"
                app:layout_constraintEnd_toEndOf="parent" />


            <EditText
                android:id="@+id/scan"
                android:layout_width="250dp"
                android:layout_height="@dimen/_30ssp"
                android:layout_marginStart="@dimen/_15ssp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/_15ssp"
                android:background="@drawable/rounded_et"
                android:hint="Barcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_btn" />

            <EditText
                android:id="@+id/scan_n"
                android:layout_width="10dp"
                android:layout_height="@dimen/_30ssp"
                android:background="@drawable/rounded_et"
                android:hint="Barcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/scan"
                tools:layout_editor_absoluteY="60dp" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20ssp"
                android:text="Qty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scan" />


            <LinearLayout
                android:id="@+id/btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qty">


                <ImageView
                    android:id="@+id/ivPlus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20sp"
                    app:srcCompat="@drawable/plus" />

                <ImageView
                    android:id="@+id/ivMinus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20sp"
                    app:srcCompat="@drawable/minus" />

                <ImageView
                    android:id="@+id/ivupdate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/ivPlus"
                    app:layout_constraintTop_toBottomOf="@+id/tvAmount"
                    app:srcCompat="@drawable/ic_baseline_language_24" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/showListLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btns">


                <ImageView
                    android:id="@+id/showlist"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="@color/color5"
                    app:srcCompat="@drawable/ic_baseline_format_list_bulleted_24" />


            </LinearLayout>

            <TextView
                android:id="@+id/itemId"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="item id"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/showListLinear"
                app:layout_constraintBottom_toTopOf="@id/rv"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/itemId"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>